.navbar.navbar-default.navbar-fixed-top{ role: "navigation", style: "margin-bottom: 0" }
  .navbar-header
    %button.navbar-toggle{ "data-target": ".sidebar-collapse", "data-toggle": "collapse", type: "button" }
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: '/' }
  %ul.nav.nav-bar-top-links.navbar-right
    %li.dropdown
      - if user_signed_in?
        %a.dropdown-toggle{ "data-toggle": "dropdown" }
          Hello, 
          = current_user.email
          %i.fa.fa-user.fa-fw
          %i.fa.fa-caret-down
        %ul.dropdown-menu
          - if user_signed_in?
            %li= link_to "User Profile", current_user
            %li= link_to "User List", users_path if can? :index, User
            %li.divider
            %li= link_to "Log Out", destroy_user_session_path, method: :delete
          - else
            %li= link_to "Login", new_user_session_path

